{
  "manifest_version": 3,
  "name": "YouTube Sentiment Analyzer",
  "version": "1.0",
  "description": "Analyse les sentiments des commentaires YouTube",
  "permissions": ["activeTab", "storage"],
  "host_permissions": ["https://*.youtube.com/*", "http://localhost:8000/*"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Analyser les sentiments"
  },
  "content_scripts": [
    {
      "matches": ["https://*.youtube.com/*"],
      "js": ["content.js"]
    }
  ]
}